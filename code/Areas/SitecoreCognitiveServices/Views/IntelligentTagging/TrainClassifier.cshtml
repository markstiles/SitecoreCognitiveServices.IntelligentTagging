@using SitecoreCognitiveServices.Feature.IntelligentTagging.Statics

@{
    ViewBag.Title = Translator.Text("TrainClassifier.ViewTitle");
    Layout = "~/Areas/SitecoreCognitiveServices/Views/Common/CognitiveLayout.cshtml";
}

<link rel="stylesheet" href="/Areas/SitecoreCognitiveServices/Assets/css/SitecoreCognitiveServices.Feature.IntelligentTagging.css?x=@(new System.Random().Next())" />

<div class="frame">
    
    <form class="form train-classifier-form" method="post" action="/SitecoreCognitiveServices/IntelligentTagging/TrainClassifierPost">
        <fieldset>
            <div class="form-row">
                @Translator.Text("TrainClassifier.Description")
            </div>
        </fieldset>
        <fieldset>
            <div class="result-success">
                @Html.Raw(Translator.Text("TrainClassifier.SuccessMessage"))
            </div>
            <div class="result-failure">
                @Html.Raw(Translator.Text("TrainClassifier.FailureMessage"))
                <div class="message"></div>
            </div>
            <div class="result-status">
                
            </div>
        </fieldset>
        <fieldset>
            <div>
                @Html.Partial("_ContextFields")
            </div>
        </fieldset>
        <div class="scWizardButtons">
            <button class="form-submit scButton scButtonPrimary">@Translator.Text("TrainClassifier.ButtonText")</button>
        </div>
    </form>
    @Html.Partial("_ProgressIndicator")
</div>

<script src="/Areas/SitecoreCognitiveServices/Assets/js/SitecoreCognitiveServices.Feature.IntelligentTagging.Shared.js"></script>
<script src="/Areas/SitecoreCognitiveServices/Assets/js/SitecoreCognitiveServices.Feature.IntelligentTagging.TrainClassifier.js"></script>
